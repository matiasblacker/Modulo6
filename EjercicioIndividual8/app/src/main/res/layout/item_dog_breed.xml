<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <!-- Aquí se muestra el nombre de la raza -->
    <TextView
        android:id="@+id/breed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perros"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <!-- El Button para ver las imágenes de la raza Labrador -->
    <Button
        android:id="@+id/breed_button_labrador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Labrador"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- El Button para ver las imágenes de la raza Bulldog -->
    <Button
        android:id="@+id/breed_button_bulldog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Bulldog"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- El Button para ver las imágenes de la raza Poodle -->
    <Button
        android:id="@+id/breed_button_poodle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Poodle"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <!-- El Button para ver las imágenes de la raza Beagle -->
    <Button
        android:id="@+id/breed_button_beagle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Beagle"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

</LinearLayout>
